@model FitnessSiteMVC.Models.ViewModels.ProfileVM

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <h1>Create your Profile</h1>
</div>





    }
<div class="create-profile-container card">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Name" value="@User.Identity.Name" type="hidden" />
        <div class="form-group">
            <label asp-for="Height" class="control-label"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weight" class="control-label"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TargetWeight" class="control-label"></label>
            <input asp-for="TargetWeight" class="form-control" />
            <span asp-validation-for="TargetWeight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Activitylevel" class="control-label"></label>
            <select asp-for="Activitylevel">
                <option value="1.2">Sedentary: little or no exercise</option>
                <option value="1.4">Exercise 1-3 times/week</option>
                <option value="1.6">Exercise 4-5 times/week</option>
                <option value="1.75">Daily exercise or intense exercise 3-4 times/week</option>
                <option value="2">Intense exercise 6-7 times/week</option>
                <option value="2.4">Very intense exercise daily, or physical job</option>
            </select>
            <span asp-validation-for="Activitylevel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
  <script>
      $("header").hide();
  </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
